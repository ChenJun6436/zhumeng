public class NoteContentUtil {
	
	/**
	 * 发送验证码
	 * @param checkCode
	 * @return
	 */
	public static String getCheckCodeContent(String checkCode){
		StringBuffer buffer = new StringBuffer();
		buffer.append("验证码:").append(checkCode).append(",15分钟内有效。");
		return buffer.toString();
	}
}
